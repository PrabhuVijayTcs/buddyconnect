@using System.Configuration
@{
    var pickupDropServiceName = ConfigurationManager.AppSettings["PickupDropService"];
}

<style type="text/css">

    .card-main {
        background-color: rgba(0, 0, 0, 0.5) !important;
        border-radius: 6px;
        margin-top: 15px;
        width: 100%;
    }

    .card-body .card {
        background-color: rgba(0, 0, 0, 0.4) !important;
        border-radius: 5px;
        box-shadow: inherit;
    }

    .card-body {
        padding-top: 5px;
    }

    .card-header h3 {
        color: white;
    }

    .editLink {
        color: white;
        font-size: 12px;
    }

    .bgProfile {
        background: rgba(0, 0, 0, 0.7);
        border-radius: 6px;
        margin-top: 15px;
    }

    h3.username {
        color: #ffffff;
        padding: 5px;
    }


    .colorWhite {
        color: #ffffff;
    }

    .labels {
        font-size: 20px;
    }

    .values {
        font-size: 20px;
    }

    .form-control[disabled] {
        background-color: rgb(161, 161, 161);
        font-size: 15px;
    }

    .nav-tabs :not(.active) {
        color: #ffffff;
        font-weight: bold;
    }

    .yesQues, .noQues {
        display: none;
    }


    .membership {
        color: rgb(253, 186, 62);
        font-size: 18px;
    }

    .miles {
        color: rgb(223, 185, 135);
        font-size: 15px;
    }

    .userName2 {
        color: rgb(125, 180, 254);
        font-size: 20px;
    }

    .submit-btn {
        -webkit-transition: 0.2s all;
        background-color: #f23e3e;
        border: none;
        border-radius: 20px;
        color: #fff;
        font-size: 14px;
        font-weight: 400;
        height: 40px;
        text-transform: uppercase;
        transition: 0.2s all;
        width: 200px;
    }

    .largeTabs {
        padding: 5px;
    }

    .qty .count, .count1 {
        color: #000;
        display: inline-block;
        vertical-align: top;
        font-size: 25px;
        font-weight: 700;
        line-height: 30px;
        padding: 0 2px;
        min-width: 35px;
        text-align: center;
    }

    .qty .plus, .plus1 {
        cursor: pointer;
        display: inline-block;
        vertical-align: top;
        color: white;
        width: 30px;
        height: 30px;
        font: 30px/1 Arial,sans-serif;
        text-align: center;
        border-radius: 50%;
    }

    .qty .minus, .minus1 {
        cursor: pointer;
        display: inline-block;
        vertical-align: top;
        color: white;
        width: 30px;
        height: 30px;
        font: 30px/1 Arial,sans-serif;
        text-align: center;
        border-radius: 50%;
        background-clip: padding-box;
    }

    .minus:hover {
        background-color: orangered !important;
    }

    .minus1:hover {
        background-color: orangered !important;
    }

    .plus:hover {
        background-color: orangered !important;
    }

    .plus1:hover {
        background-color: orangered !important;
    }
    /*Prevent text selection*/
    span {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
    }
</style>

<script>
    $(document).ready(function () {
        $(document).on('click', '.plus', function () {
            var valueInCount = parseInt($('.count').text());
            $('.count').text(valueInCount + 1);
        });
        $(document).on('click', '.minus', function () {
            var valueInCount = parseInt($('.count').text());
            if (valueInCount > 0) {
                $('.count').text(valueInCount - 1);
            }
        });

        $(document).on('click', '.plus1', function () {
            var valueInCount = parseInt($('.count1').text());
            $('.count1').text(valueInCount + 1);
        });
        $(document).on('click', '.minus1', function () {
            var valueInCount = parseInt($('.count1').text());
            if (valueInCount > 0) {
                $('.count1').text(valueInCount - 1);
            }
        });


    });
</script>
<div class="row">
    <div class="col-12">
        <form action="@Url.Action("Confirmation", "Booking")" method="post">
            <div class="card-main">
                <div class="card-header ml-3 ">
                    <h3>Additional Services</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 colorWhite ml-3">
                            <fieldset>
                                <legend><i class="fas fa-car" style="color:black"></i> Would you like to use our @pickupDropServiceName service?</legend>
                                <div class="form-group">
                                    <div class="custom-control custom-radio mb-2">
                                        <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input" checked="">
                                        <label class="custom-control-label" for="customRadio1">
                                            <strong>Yes, </strong>add service for additional <span style="color:orangered">$45. </span>
                                            <i class="fas fa-check text-danger"></i> Recommended
                                        </label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
                                        <label class="custom-control-label" for="customRadio2">No, thank you.</label>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        </div>
                        <div class="row">
                            <div class="col-12 colorWhite ml-3 mt-3 mb-3">
                                <h3>Other Amenities</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 colorWhite ml-3">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#baggage"><i class="fas fa-suitcase-rolling" style="color:orangered"></i> &nbsp;Baggage</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#wifi"><i class="fas fa-wifi" style="color:orangered"></i> &nbsp; Wifi</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#food"><i class="fas fa-utensils" style="color:orangered"></i> &nbsp; Meals & Snacks</a>
                                    </li>
                                </ul>
                                <div id="myTabContent" class="tab-content">
                                    <div class="tab-pane fade active show" id="baggage">
                                        <div class="row">
                                            <div class="col-6 mt-3">
                                                <div class="row">
                                                    <div class="col-6">
                                                        <div class="mt-3">
                                                            Carry-On-Baggage
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="qty mt-3">
                                                            <span class="minus bg-dark">-</span>
                                                            <span class="count" style="color: white" name="qty">0</span>
                                                            <span class="plus bg-dark">+</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-6">
                                                        <div class="mt-3">
                                                            Checked-In Baggage
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="qty mt-3">
                                                            <span class="minus1 bg-dark">-</span>
                                                            <span class="count1" style="color: white" name="qty">0</span>
                                                            <span class="plus1 bg-dark">+</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mt-3 col-12">
                                                    <a href="#">Learn more about Baggage limits and restrictions</a><br />
                                                </div>
                                            </div>
                                            <div class="col-6 mt-3">
                                                <img style="width:130px;height:130px;" src="~/assets/img/bag.png" />
                                            </div>

                                        </div>
                                    </div>

                                    <div class="tab-pane fade  " id="wifi">
                                        Test1
                                    </div>
                                    <div class="tab-pane fade  " id="food">
                                        Test2
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn submit-btn" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Next</button>
                    </div>
                </div>
        </form>
    </div>
</div>