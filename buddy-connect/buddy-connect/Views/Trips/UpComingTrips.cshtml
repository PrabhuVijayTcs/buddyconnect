@model buddy_connect.Models.Booking.ConfirmationModel

@{
    ViewBag.Title = "Trips";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var random = new Random();
    var boardingGroup = random.Next(1,7); 
    var tripSlice = Model.TripAndFareDetail.TripSlices.First();
}

<style type="text/css">
    table {
        border-spacing: 15px;
    }

    td {
        text-align: left;
    }

    .boarding-pass-small-header {
        font-size: x-small;
    }

    .boarding-pass-value-fields {
        font-size: large;
        font-weight: bold;
    }

    .boarding-pass-btn {
        color: #fff;
        background-color: #f23e3e;
        font-weight: 400;
        height: 40px;
        font-size: 14px;
        border: none;
        width: 30%;
        border-radius: 10px;
        text-transform: uppercase;
        -webkit-transition: 0.2s all;
        transition: 0.2s all;
    }
    .boarding-pass-div {
        background-color: whitesmoke;
        padding: 15px;
        width: 95%;
        border-radius: 6px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        float:left;
        margin-right:3%;
    }
</style>
<style type="text/css">
    .card-main {
        background-color: rgba(0, 0, 0, 0.5) !important;
        border-radius: 6px;
        margin-top: 15px;
        width: 100%;
    }

    .card-body .card {
        background-color: rgba(0, 0, 0, 0.4) !important;
        border-radius: 5px;
        box-shadow: inherit;
    }

    .card-body {
        padding-top: 5px;
    }

    .card-header h3 {
        color: white;
    }

    .colorWhite {
        color: #ffffff;
    }
</style>
<div class="row">
<div class="col-12">

    <div class="card-main">
        <div class="card-header ml-3 ">
            <h3>PNR: <strong class="text-info">@Model.RecordLocator</strong></h3>
        </div>
        <div class="card-body">
            <div>@Html.Partial("_ConfirmationWidget")</div>
            <div>
                <button id="btn-boarding-pass" class="boarding-pass-btn">View Boarding Pass</button>
            </div>

            <div class="pt-2 row">
                @foreach (var segment in tripSlice.Segments)
                {
                    <div class="col-6 text-center">
                        <div class="boarding-pass-div" style="border: solid 1px black">
                            <table>
                                <tr>
                                    <td colspan=2>
                                        <img src="~/assets/img/airline_UK_boardingpass.png" width="85" height="55" alt="err-logo">
                                    </td>
                                    <td></td>
                                    <td colspan=3>
                                        <label class="boarding-pass-value-fields">@Model.userProfile.FirstName @Model.userProfile.LastName</label>
                                    </td>
                                    <td></td>
                                    <td colspan=3 style="text-align:right">
                                        <label class="boarding-pass-value-fields">@segment.DepartureDateTime.ToString("dd MMM yyyy")</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan=2>
                                        <label class="boarding-pass-small-header">Flight Number</label>
                                        <br>
                                        <label class="boarding-pass-value-fields">@segment.FlightNumber</label>
                                    </td>
                                    <td></td>
                                    <td colspan=3>
                                        <label class="boarding-pass-small-header">Departure Airport</label>
                                        <br>
                                        <label class="boarding-pass-value-fields">@segment.OriginCityCode</label>
                                    </td>
                                    <td></td>
                                    <td colspan=2>
                                        <label class="boarding-pass-small-header">Departs</label>
                                        <br>
                                        <label class="boarding-pass-value-fields">@segment.DepartureDateTime.ToString("HH:mm")</label>
                                    </td>
                                    <td colspan=2>
                                        <label class="boarding-pass-small-header">Seat</label>
                                        <br>
                                        <label class="boarding-pass-value-fields">@($"A{random.Next(1, 10)}")</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan=2>
                                        <label class="boarding-pass-small-header">Gate</label>
                                        <br>
                                        <label class="boarding-pass-value-fields">@($"G{random.Next(1, 30)}")</label>
                                    </td>
                                    <td></td>
                                    <td colspan=3>
                                        <label class="boarding-pass-small-header">Boarding Starts</label>
                                        <br>
                                        <label class="boarding-pass-value-fields">@segment.DepartureDateTime.AddMinutes(-60).ToString("HH:mm")</label>
                                    </td>
                                    <td></td>
                                    <td colspan=2>
                                        <label class="boarding-pass-small-header">Boarding closes</label>
                                        <br>
                                        <label class="boarding-pass-value-fields">@segment.DepartureDateTime.AddMinutes(-20).ToString("HH:mm")</label>
                                    </td>
                                    <td colspan=2>
                                        <label class="boarding-pass-small-header">Group</label>
                                        <br>
                                        <label class="boarding-pass-value-fields" style="text-align: center;">@boardingGroup</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan=4 width="150">
                                        <img src="~/assets/img/boardingpass-barcode.png" alt="Err - barcode" height=50 width=130 />
                                    </td>

                                    <td colspan=2>
                                        <label class="boarding-pass-small-header">Conf #</label>
                                        <br>
                                        <label class="boarding-pass-value-fields">@Model.RecordLocator</label>
                                    </td>
                                    <td></td>
                                    <td colspan=3>
                                        <label class="boarding-pass-small-header">Ticket</label>
                                        <br>
                                        <label class="boarding-pass-value-fields">1724567896@(random.Next(100, 999))</label>
                                    </td>
                                </tr>
                            </table>
                        </div>

                    </div>
                }

            </div>
        </div>
    </div>
</div>
</div>



<script>
    $(document).ready(function () {
        $('.boarding-pass-div').hide();
    });
    $("#btn-boarding-pass").click(function () {
        $('.boarding-pass-div').slideToggle("swing");
    });
</script>